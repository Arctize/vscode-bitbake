{
	"compilerOptions": {
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,		
		"target": "ES2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"rootDir": "src",
		"outDir": "out"
	},
	"exclude": [
		"node_modules"
	]
}
